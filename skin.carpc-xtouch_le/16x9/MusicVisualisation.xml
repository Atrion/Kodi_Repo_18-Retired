		</control>  
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>ScreenWidth</width>
			<height>ScreenHeight</height>
			<visible>!Skin.HasSetting(UseVisBgFull)</visible>
			<texture>$INFO[Skin.String(CustomBackgroundPath)]</texture> 
		</control>  

